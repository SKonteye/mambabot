# Telegram Bot Token (get from @BotFather on Telegram)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Anthropic API Key (get from https://console.anthropic.com/)
# Only required if USE_CLAUDE_CLI=false
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Use Claude CLI instead of SDK (true/false)
# Set to 'true' to use your globally installed claude command
# Set to 'false' to use the Claude Agent SDK (requires ANTHROPIC_API_KEY)
USE_CLAUDE_CLI=true
